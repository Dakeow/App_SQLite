<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F6F6F6">

    <!-- Título -->

    <!-- Campos de entrada -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:text="GESTOR DE USUARIOS"
        android:textColor="#333"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el Documento"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el Usuario"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese los Nombres"
        android:inputType="textPersonName"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese los Apellidos"
        android:inputType="textPersonName"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la Contraseña"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <!-- Botones en filas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registrar"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buscar"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actualizar"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnListar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listar"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Borrar"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Lista de usuarios -->
    <ListView
        android:id="@+id/lvLista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"/>
</LinearLayout>
